@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="hero-section bg-gradient-primary text-white py-5 mb-5">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4">
                <i class="fas fa-file-alt me-3"></i>DocuSense
            </h1>
            <p class="lead mb-4">
                AI-Powered Document Intelligence Platform
            </p>
            <p class="mb-5">
                Upload, analyze, and extract data from your documents using advanced Azure Cognitive Services. 
                Transform unstructured documents into actionable insights with enterprise-grade security and compliance.
            </p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Documents" asp-action="Upload" class="btn btn-light btn-lg">
                        <i class="fas fa-upload me-2"></i>Upload Document
                    </a>
                    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-tachometer-alt me-2"></i>View Dashboard
                    </a>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Get Started
                    </a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="container">
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-robot fa-3x text-primary"></i>
                    </div>
                    <h4>AI-Powered Processing</h4>
                    <p class="text-muted">
                        Leverage Azure Cognitive Services for advanced OCR, form recognition, and document analysis.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-3x text-primary"></i>
                    </div>
                    <h4>Enterprise Security</h4>
                    <p class="text-muted">
                        Built on Azure with enterprise-grade security, compliance, and audit capabilities.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-primary"></i>
                    </div>
                    <h4>Advanced Analytics</h4>
                    <p class="text-muted">
                        Comprehensive reporting, analytics, and insights from your document processing activities.
                    </p>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-lg-6">
                <h3 class="mb-4">Supported Document Types</h3>
                <div class="row">
                    <div class="col-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-file-pdf text-danger me-2"></i>PDF Documents</li>
                            <li class="mb-2"><i class="fas fa-file-image text-success me-2"></i>Images (JPG, PNG)</li>
                            <li class="mb-2"><i class="fas fa-file-alt text-info me-2"></i>Text Documents</li>
                        </ul>
                    </div>
                    <div class="col-6">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-file-word text-primary me-2"></i>Word Documents</li>
                            <li class="mb-2"><i class="fas fa-file-excel text-success me-2"></i>Excel Spreadsheets</li>
                            <li class="mb-2"><i class="fas fa-file-powerpoint text-warning me-2"></i>PowerPoint Files</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <h3 class="mb-4">Key Features</h3>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Automatic text extraction and OCR</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Form field recognition and data extraction</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Document classification and categorization</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Multi-language support</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Real-time processing status</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Comprehensive audit logging</li>
                </ul>
            </div>
        </div>

        @if (!User.Identity?.IsAuthenticated == true)
        {
            <div class="cta-section bg-light p-5 rounded">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h3>Ready to Get Started?</h3>
                        <p class="mb-0">
                            Join thousands of users who are already transforming their document workflows with DocuSense.
                        </p>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-rocket me-2"></i>Start Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 0 0 2rem 2rem;
    }

    .feature-card {
        border: 1px solid #e9ecef;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .feature-icon {
        color: #667eea;
    }

    .cta-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
</style> 